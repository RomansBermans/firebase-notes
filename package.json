{
  "name": "firebase-notes",
  "version": "0.0.0-alpha.0",
  "scripts": {
    "postinstall": "cd app && npm install",


    "prestart": "node -e \"require('./init').prepare.app('', 'dev')\"",
    "start": "firebase serve",


    "pretest:app": "node -e \"require('./init').deploy('database')\" && babel test/helper.js test/app/app.js --out-file test/app/app.babel.js",
    "test:app": "phantomjs --web-security=no node_modules/mocha-phantomjs-core/mocha-phantomjs-core.js test/app/index.html spec '{\"useColors\": true, \"ignoreResourceErrors\": true}'",

    "test:database": "mocha test/database --reporter spec --ui bdd --slow 50 --timeout 1000",

    "pretest:storage": "node -e \"require('./init').deploy('storage')\" && babel test/helper.js test/storage/rules.js --out-file test/storage/rules.babel.js",
    "test:storage": "phantomjs --web-security=no node_modules/mocha-phantomjs-core/mocha-phantomjs-core.js test/storage/index.html spec '{\"useColors\": true, \"ignoreResourceErrors\": true}'",

    "pretest": "eslint --ignore-path .gitignore . && node -e \"require('./init').patch.firebase()\"",
    "test": "npm run test:app && npm run test:database && npm run test:storage",


    "predeploy:app": "node -e \"require('./init').prepare.app('$PROJECT')\"",
    "deploy:app": "firebase deploy --only hosting --project $PROJECT --message \"${MESSAGE:- }\"",

    "deploy:database": "firebase deploy --only database --project $PROJECT",

    "predeploy:storage": "node -e \"require('./init').prepare.storage('$PROJECT')\"",
    "deploy:storage": "firebase deploy --only storage --project $PROJECT",

    "deploy": "npm run deploy:app && npm run deploy:database && npm run deploy:storage"
  },
  "devDependencies": {
    "babel-cli": "^6.24.0",
    "babel-polyfill": "^6.23.0",
    "babel-preset-es2015": "^6.24.0",
    "chai": "^3.5.0",
    "eslint": "^3.18.0",
    "eslint-config-airbnb-base": "^11.1.2",
    "eslint-plugin-import": "^2.2.0",
    "firebase": "^3.7.4",
    "firebase-bolt": "^0.8.1",
    "firebase-tools": "^3.5.0",
    "mocha": "^3.1.2",
    "mocha-phantomjs-core": "^2.1.1",
    "phantomjs-prebuilt": "^2.1.14",
    "shelljs": "^0.7.7",
    "targaryen": "^3.0.1"
  },
  "babel": {
    "presets": ["es2015"]
  },
  "eslintConfig": {
    "extends": "airbnb-base",
    "env": {
      "mocha": true
    },
    "rules": {
      "arrow-parens": ["error", "as-needed"],
      "comma-dangle": ["error", "always-multiline"],
      "import/no-dynamic-require": "off",
      "import/no-extraneous-dependencies": ["error", { "devDependencies": true }],
      "max-len": ["error", 240],
      "no-param-reassign": ["error", { "props": false }]
    }
  },
  "repository": {
    "type": "git",
    "url": "git@github.com:RomansBermans/firebase-notes.git"
  },
  "bugs": {
    "url": "https://github.com/RomansBermans/firebase-notes/issues"
  },
  "homepage": "https://github.com/RomansBermans/firebase-notes",
  "author": "Romans Bermans <romans.bermans@gmail.com>",
  "license": "ISC"
}
